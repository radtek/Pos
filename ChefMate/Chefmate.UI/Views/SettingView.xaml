                        <Grid Grid.Row="2">
                            <Grid.RowDefinitions>
                                <RowDefinition />
                                <RowDefinition />
                                <RowDefinition />
                                <RowDefinition />
                                <RowDefinition />
                                <RowDefinition />
                                <RowDefinition />
                                <RowDefinition />
                            </Grid.RowDefinitions>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width=".50*"/>
                                <ColumnDefinition Width=".50*"/>
                            </Grid.ColumnDefinitions>
                            <Label Grid.Row="0" Grid.Column="0" Style="{StaticResource FormLabel}">New Order</Label>
                            <Button Grid.Row="0" Grid.Column="1" Margin="0,5,5,0" Style="{StaticResource SoundButtonStyle}"
                                    Command="{Binding TestSoundCommand}" CommandParameter="{Binding ElementName=NewOrderCombobox,Path=SelectedValue}">Test Sound</Button>
                            <ComboBox x:Name="NewOrderCombobox" Grid.Row="1" Grid.Column="0" Grid.ColumnSpan="2" Style="{StaticResource SoundComboBox}"
                                  ItemsSource="{Binding SoundList}" SelectedValue="{Binding CurrentSettings.NewOrderMmSound}"/>
                            <Label Grid.Row="2" Grid.Column="0" Style="{StaticResource FormLabel}">Cancel Notice</Label>
                            <Button Grid.Row="2" Grid.Column="1" Margin="0,5,5,0" Style="{StaticResource SoundButtonStyle}"
                                    Command="{Binding TestSoundCommand}" CommandParameter="{Binding ElementName=CancelNotice,Path=SelectedValue}">Test Sound</Button>
                            <ComboBox x:Name="CancelNotice" Grid.Row="3" Grid.Column="0" Grid.ColumnSpan="2" Style="{StaticResource SoundComboBox}"
                                  ItemsSource="{Binding SoundList}" SelectedValue="{Binding CurrentSettings.CancelNoticeMmSound}"/>
                            <Label Grid.Row="4" Grid.Column="0" Style="{StaticResource FormLabel}">Refund Notice</Label>
                            <Button Grid.Row="4" Grid.Column="1" Margin="0,5,5,0" Style="{StaticResource SoundButtonStyle}"
                                    Command="{Binding TestSoundCommand}" CommandParameter="{Binding ElementName=RefundNotice,Path=SelectedValue}">Test Sound</Button>
                            <ComboBox x:Name="RefundNotice" Grid.Row="5" Grid.Column="0" Grid.ColumnSpan="2" Style="{StaticResource SoundComboBox}" 
                                  ItemsSource="{Binding SoundList}" SelectedValue="{Binding CurrentSettings.RefundNoticeMmSound}"/>
                            <Label Grid.Row="6" Grid.Column="0" Style="{StaticResource FormLabel}">Transfer Notice</Label>
                            <Button Grid.Row="6" Grid.Column="1" Margin="0,5,5,0" Style="{StaticResource SoundButtonStyle}"
                                    Command="{Binding TestSoundCommand}" CommandParameter="{Binding ElementName=TransferNotice,Path=SelectedValue}">Test Sound</Button>
                            <ComboBox x:Name="TransferNotice" Grid.Row="7" Grid.Column="0" Grid.ColumnSpan="2" Style="{StaticResource SoundComboBox}" 
                                  ItemsSource="{Binding SoundList}" SelectedValue="{Binding CurrentSettings.TransferNoticeMmSound}"/>
                        </Grid>
                    </Border>
                    <Border Grid.Row="2" Grid.Column="1" Style="{StaticResource MarginalGroupBorder}">
                        <Grid VerticalAlignment="Top">
                            <Grid.RowDefinitions>
                                <RowDefinition />
                                <RowDefinition />
                                <RowDefinition />
                                <RowDefinition />
                            </Grid.RowDefinitions>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width=".50*"/>
                                <ColumnDefinition Width=".50*"/>
                            </Grid.ColumnDefinitions>
                            <Label Grid.Row="0" Grid.Column="0" Style="{StaticResource FormLabel}">Order Arrived</Label>
                            <Button Grid.Row="0" Grid.Column="1" Margin="0,5,5,0" Style="{StaticResource SoundButtonStyle}"
                                    Command="{Binding TestSoundCommand}" CommandParameter="{Binding ElementName=OrderArrived,Path=SelectedValue}">Test Sound</Button>
                            <ComboBox x:Name="OrderArrived" Style="{StaticResource SoundComboBox}" Grid.Row="1" Grid.Column="0" Grid.ColumnSpan="2" 
                                      ItemsSource="{Binding SoundList}" SelectedValue="{Binding CurrentSettings.OrderArrivedCmSound}"/>
                            <Label Grid.Row="2" Grid.Column="0" Style="{StaticResource FormLabel}">Transfer Order</Label>
                            <Button Grid.Row="2" Grid.Column="1" Margin="0,5,5,0" Style="{StaticResource SoundButtonStyle}"
                                    Command="{Binding TestSoundCommand}" CommandParameter="{Binding ElementName=TransferOrder,Path=SelectedValue}">Test Sound</Button>
                            <ComboBox x:Name="TransferOrder" Style="{StaticResource SoundComboBox}" Grid.Row="3" Grid.Column="0" Grid.ColumnSpan="2" 
                                      ItemsSource="{Binding SoundList}" SelectedValue="{Binding CurrentSettings.TransferOrderCmSound}"/>
                        </Grid>
                    </Border>
                    <Label Style="{StaticResource HeaderTopStyle}" Grid.Row="3" Grid.Column="0"></Label>
                    <Label Style="{StaticResource GroupHeaderStyle}" Grid.Row="4" Grid.Column="0" Content="Volume Control"></Label>
                    <Border Grid.Row="5" Grid.Column="0" Style="{StaticResource MarginalGroupBorder}">
                        <StackPanel Grid.Row="2">
                            <Slider Name="VolumeSlider" Minimum="0" Maximum="100" Value="{Binding SliderValue}" Margin="5"></Slider>
                            <Label HorizontalContentAlignment="Center" Style="{StaticResource FormLabel}"
                                   Content="{Binding ElementName=VolumeSlider, Path=Value,Converter={StaticResource VolumeStringConverters}}"></Label>
                        </StackPanel>
                    </Border>
                </Grid>
            </TabItem>
        </TabControl>
        <Grid Grid.Row="1">
            <Grid.ColumnDefinitions>
                <ColumnDefinition/>
                <ColumnDefinition/>
            </Grid.ColumnDefinitions>
            <Label Grid.Column="0" Style="{StaticResource ErrorLabelStyle}" Content="{Binding ValidationError}" VerticalAlignment="Center"
                   FontSize="15" FontWeight="Bold"></Label>
            <StackPanel Grid.Column="1" HorizontalAlignment="Right" Orientation="Horizontal" Background="White">
                <Button  Margin="10" Command="{Binding SaveCommand}" Height="40" Width="100" HorizontalAlignment="Right">Save</Button>
                <Button Margin="10" Command="{Binding CloseCommand}" Height="40" Width="100">Cancel</Button>
            </StackPanel>

        </Grid>

    </Grid>

</Window>
